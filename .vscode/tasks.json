{
    "version": "2.0.0",
    "tasks": [
        {
            "options": {
                "env": {
                    "FLASK_ENV": "development",
                    "FLASK_APP": "${workspaceFolder}/image_server"
                }
            },
            "label": "image-server/run",
            "command": "${workspaceFolder}/venv/bin/flask run",
            "type": "shell",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "imageserver:latest",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build"
            ],
            "dockerRun": {
                "env": {
                    "FLASK_APP": "image_server:create_app()"
                }
            },
            "python": {
                "args": [
                    "run",
                    "--no-debugger",
                    "--no-reload",
                    "--host 0.0.0.0",
                    "--port 9000"
                ],
                "module": "flask"
            }
        }
    ]
}